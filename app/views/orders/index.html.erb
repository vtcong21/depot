<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Orders" %>
  <div class="flex items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_order_path, class: " ml-10 rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="orders" class="min-w-full pt-3">
    <table class="min-w-full border-collapse border border-gray-200">
      <thead>
        <tr>
          <th class="border border-gray-300 py-3 px-3 text-left">Name</th>
          <th class="border border-gray-300 py-3 px-3 text-left">Address</th>
          <th class="border border-gray-300 py-3 px-3 text-left">Email</th>
          <th class="border border-gray-300 py-3 px-3 text-left">Pay type</th>
          <th class="border border-gray-300 py-3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <%= render order %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
